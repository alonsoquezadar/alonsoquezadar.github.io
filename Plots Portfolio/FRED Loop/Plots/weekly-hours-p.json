{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "background": "#fdfcfa",
  "padding": 5,
  "width": 400,
  "height": 220,
  "title": {
    "text": "Average Weekly Hours",
    "subtitle": "Hours worked per week",
    "fontSize": 14,
    "subtitleFontSize": 11,
    "subtitleColor": "#666",
    "frame": "group"
  },
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/alonsoquezadar/alonsoquezadar.github.io/refs/heads/main/Plots%20Portfolio/FRED%20Loop/Data/weekly_hours.json",
      "format": {"property": "data", "type": "json", "parse": {"date": "date"}}
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "line",
      "style": ["line"],
      "sort": {"field": "x"},
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "strokeWidth": {"value": 2},
          "stroke": {"value": "#9b5de5"},
          "tooltip": {
            "signal": "{\"Date\": timeFormat(datum[\"date\"], \"%B %Y\"), \"Hours\": format(datum[\"value\"], \".1f\")}"
          },
          "description": {
            "signal": "\"date: \" + (timeFormat(datum[\"date\"], \"%Y\")) + \"; value: \" + (format(datum[\"value\"], \"\")) + \"; Date: \" + (timeFormat(datum[\"date\"], \"%B %Y\")) + \"; Hours: \" + (format(datum[\"value\"], \".1f\"))"
          },
          "x": {"scale": "x", "field": "date"},
          "y": {"scale": "y", "field": "value"},
          "defined": {
            "signal": "isValid(datum[\"date\"]) && isFinite(+datum[\"date\"]) && isValid(datum[\"value\"]) && isFinite(+datum[\"value\"])"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": {"data": "source_0", "field": "date"},
      "range": [0, {"signal": "width"}]
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {"data": "source_0", "field": "value"},
      "range": [{"signal": "height"}, 0],
      "zero": false,
      "nice": true
    }
  ],
  "axes": [
    {
      "scale": "y",
      "orient": "left",
      "grid": true,
      "gridColor": "#e0e0e0",
      "tickCount": 4,
      "gridScale": "x",
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "format": "%Y",
      "labelFontSize": 9,
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "labelFontSize": 9,
      "tickCount": 4,
      "labelOverlap": true,
      "zindex": 0
    }
  ],
  "config": {"style": {"cell": {"stroke": null}}}
}