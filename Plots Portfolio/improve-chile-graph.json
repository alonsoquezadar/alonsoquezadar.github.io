{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "background": "#fdfcfa",
  "padding": 5,
  "width": 700,
  "height": 420,
  "title": {
    "text": "The Economic Trajectory of Chile",
    "subtitle": "Real GDP per capita compared to peer economies, 1950â€“2016 (2011 US$ PPP)",
    "fontSize": 20,
    "subtitleFontSize": 14,
    "subtitleColor": "#666",
    "frame": "group"
  },
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/alonsoquezadar/alonsoquezadar.github.io/refs/heads/main/Plots%20Portfolio/Datasets/chile_gdp_comparison_data.csv",
      "format": {"type": "csv", "parse": {"year": "number"}, "delimiter": ","}
    },
    {"name": "source_1", "values": [{"year": 1975}]},
    {"name": "source_2", "values": [{"year": 1975, "label": "1975"}]},
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {"type": "filter", "expr": "datum.year === 2016"},
        {
          "type": "filter",
          "expr": "isValid(datum[\"year\"]) && isFinite(+datum[\"year\"]) && isValid(datum[\"gdp_pc\"]) && isFinite(+datum[\"gdp_pc\"])"
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_1",
      "transform": [
        {
          "type": "filter",
          "expr": "isValid(datum[\"year\"]) && isFinite(+datum[\"year\"])"
        }
      ]
    },
    {
      "name": "data_2",
      "source": "source_2",
      "transform": [
        {
          "type": "filter",
          "expr": "isValid(datum[\"year\"]) && isFinite(+datum[\"year\"])"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_pathgroup",
      "type": "group",
      "from": {
        "facet": {
          "name": "faceted_path_layer_0_main",
          "data": "source_0",
          "groupby": ["country"]
        }
      },
      "encode": {
        "update": {
          "width": {"field": {"group": "width"}},
          "height": {"field": {"group": "height"}}
        }
      },
      "marks": [
        {
          "name": "layer_0_marks",
          "type": "line",
          "style": ["line"],
          "sort": {"field": "x"},
          "from": {"data": "faceted_path_layer_0_main"},
          "encode": {
            "update": {
              "opacity": {"value": 0.9},
              "strokeWidth": {"signal": "datum.country === 'Chile' ? 3 : 2"},
              "stroke": {"scale": "color", "field": "country"},
              "x": {"scale": "x", "field": "year"},
              "y": {"scale": "y", "field": "gdp_pc"},
              "defined": {
                "signal": "isValid(datum[\"year\"]) && isFinite(+datum[\"year\"]) && isValid(datum[\"gdp_pc\"]) && isFinite(+datum[\"gdp_pc\"])"
              }
            }
          }
        }
      ]
    },
    {
      "name": "layer_1_marks",
      "type": "text",
      "style": ["text"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "align": {"value": "left"},
          "dx": {"value": 8},
          "fontSize": {"value": 12},
          "fontWeight": {"signal": "datum.country === 'Chile' ? 'bold' : 'normal'"},
          "fill": {"scale": "color", "field": "country"},
          "x": {"scale": "x", "field": "year"},
          "y": {"scale": "y", "field": "gdp_pc"},
          "text": {
            "signal": "isValid(datum[\"country\"]) ? datum[\"country\"] : \"\"+datum[\"country\"]"
          },
          "baseline": {"value": "middle"}
        }
      }
    },
    {
      "name": "layer_2_marks",
      "type": "rule",
      "style": ["rule"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "opacity": {"value": 0.5},
          "strokeWidth": {"value": 1.5},
          "strokeDash": {"value": [6, 4]},
          "stroke": {"value": "#c41e3a"},
          "x": {"scale": "x", "field": "year"},
          "y": {"value": 0},
          "y2": {"field": {"group": "height"}}
        }
      }
    },
    {
      "name": "layer_3_marks",
      "type": "text",
      "style": ["text"],
      "from": {"data": "data_2"},
      "encode": {
        "update": {
          "align": {"value": "center"},
          "dx": {"value": 20},
          "dy": {"value": -190},
          "fontSize": {"value": 11},
          "fontStyle": {"value": "italic"},
          "fill": {"value": "#c41e3a"},
          "x": {"scale": "x", "field": "year"},
          "y": {"signal": "height", "mult": 0.5},
          "text": {
            "signal": "isValid(datum[\"label\"]) ? datum[\"label\"] : \"\"+datum[\"label\"]"
          },
          "baseline": {"value": "middle"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [1950, 2022],
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "log",
      "domain": [1000, 45000],
      "range": [{"signal": "height"}, 0],
      "nice": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": ["Chile", "South Korea", "Argentina", "Spain", "Portugal"],
      "range": ["#c41e3a", "#5b8fa8", "#a89b8b", "#7d9d78", "#9887a1"]
    }
  ],
  "axes": [
    {
      "scale": "y",
      "orient": "left",
      "grid": true,
      "gridColor": "#e8e8e8",
      "gridDash": [3, 3],
      "tickCount": 5,
      "gridScale": "x",
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "format": "d",
      "labelFontSize": 12,
      "tickCount": 8,
      "labelFlush": true,
      "labelOverlap": true,
      "tickMinStep": 1,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "GDP per capita (2011 US$ PPP)",
      "format": "$,.0f",
      "labelFontSize": 11,
      "tickCount": 5,
      "titleFontSize": 12,
      "labelOverlap": "greedy",
      "zindex": 0
    }
  ],
  "config": {"style": {"cell": {"stroke": null}}}
}