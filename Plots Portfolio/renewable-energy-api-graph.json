{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "background": "#fdfcfa",
  "padding": 5,
  "width": 600,
  "height": 400,
  "title": {
    "text": "Renewable Energy Consumption by Region",
    "subtitle": "% of total final energy consumption (1990-2022). Source: World Bank API",
    "fontSize": 20,
    "subtitleFontSize": 12,
    "subtitleColor": "#666",
    "frame": "group"
  },
  "style": "cell",
  "data": [
    {"name": "highlight_store"},
    {
      "name": "source_0",
      "url": "https://api.worldbank.org/v2/country/WLD;EUU;NAC;EAS;LCN;SSF/indicator/EG.FEC.RNEW.ZS?format=json&per_page=500&date=1990:2022",
      "format": {"property": "[1]", "type": "json", "parse": {"date": "date"}},
      "transform": [
        {"type": "filter", "expr": "datum.value != null"},
        {"type": "formula", "expr": "datum.country.value", "as": "region"}
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "filter",
          "expr": "(isDate(datum[\"date\"]) || (isValid(datum[\"date\"]) && isFinite(+datum[\"date\"]))) && isValid(datum[\"value\"]) && isFinite(+datum[\"value\"])"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "unit",
      "value": {},
      "on": [
        {"events": "pointermove", "update": "isTuple(group()) ? group() : unit"}
      ]
    },
    {
      "name": "highlight_region_legend",
      "value": null,
      "on": [
        {
          "events": [
            {
              "source": "view",
              "type": "click",
              "markname": "region_legend_symbols"
            },
            {
              "source": "view",
              "type": "click",
              "markname": "region_legend_labels"
            },
            {
              "source": "view",
              "type": "click",
              "markname": "region_legend_entries"
            }
          ],
          "update": "isDefined(datum.value) ? datum.value : item().items[0].items[0].datum.value",
          "force": true
        },
        {
          "events": [{"source": "view", "type": "click"}],
          "update": "!event.item || !datum ? null : highlight_region_legend",
          "force": true
        }
      ]
    },
    {
      "name": "highlight",
      "update": "vlSelectionResolve(\"highlight_store\", \"union\", true, true)"
    },
    {
      "name": "highlight_tuple",
      "update": "highlight_region_legend !== null ? {fields: highlight_tuple_fields, values: [highlight_region_legend]} : null"
    },
    {
      "name": "highlight_tuple_fields",
      "value": [{"type": "E", "field": "region"}]
    },
    {
      "name": "highlight_toggle",
      "value": false,
      "on": [
        {
          "events": {"merge": [{"source": "view", "type": "click"}]},
          "update": "event.shiftKey"
        }
      ]
    },
    {
      "name": "highlight_modify",
      "on": [
        {
          "events": {"signal": "highlight_tuple"},
          "update": "modify(\"highlight_store\", highlight_toggle ? null : highlight_tuple, highlight_toggle ? null : true, highlight_toggle ? highlight_tuple : null)"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_pathgroup",
      "type": "group",
      "from": {
        "facet": {
          "name": "faceted_path_layer_0_main",
          "data": "source_0",
          "groupby": ["region"]
        }
      },
      "encode": {
        "update": {
          "width": {"field": {"group": "width"}},
          "height": {"field": {"group": "height"}}
        }
      },
      "marks": [
        {
          "name": "layer_0_marks",
          "type": "line",
          "style": ["line"],
          "sort": {"field": "x"},
          "interactive": true,
          "from": {"data": "faceted_path_layer_0_main"},
          "encode": {
            "update": {
              "strokeWidth": {"value": 2.5},
              "stroke": {"scale": "color", "field": "region"},
              "opacity": [
                {
                  "test": "!length(data(\"highlight_store\")) || vlSelectionTest(\"highlight_store\", datum)",
                  "value": 1
                },
                {"value": 0.2}
              ],
              "tooltip": {
                "signal": "{\"Region\": isValid(datum[\"region\"]) ? isArray(datum[\"region\"]) ? join(datum[\"region\"], '\\n') : datum[\"region\"] : \"\"+datum[\"region\"], \"Year\": timeFormat(datum[\"date\"], \"%Y\"), \"Renewable (%)\": format(datum[\"value\"], \".1f\")}"
              },
              "description": {
                "signal": "\"date: \" + (timeFormat(datum[\"date\"], \"%Y\")) + \"; Renewable energy (% of total): \" + (format(datum[\"value\"], \"\")) + \"; region: \" + (isValid(datum[\"region\"]) ? isArray(datum[\"region\"]) ? join(datum[\"region\"], ' ') : datum[\"region\"] : \"\"+datum[\"region\"]) + \"; Region: \" + (isValid(datum[\"region\"]) ? isArray(datum[\"region\"]) ? join(datum[\"region\"], ' ') : datum[\"region\"] : \"\"+datum[\"region\"]) + \"; Year: \" + (timeFormat(datum[\"date\"], \"%Y\")) + \"; Renewable (%): \" + (format(datum[\"value\"], \".1f\"))"
              },
              "x": {"scale": "x", "field": "date"},
              "y": {"scale": "y", "field": "value"},
              "defined": {
                "signal": "isValid(datum[\"date\"]) && isFinite(+datum[\"date\"]) && isValid(datum[\"value\"]) && isFinite(+datum[\"value\"])"
              }
            }
          }
        }
      ]
    },
    {
      "name": "layer_1_marks",
      "type": "symbol",
      "style": ["point"],
      "interactive": true,
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "opacity": [
            {
              "test": "!length(data(\"highlight_store\")) || vlSelectionTest(\"highlight_store\", datum)",
              "value": 1
            },
            {"value": 0.2}
          ],
          "size": {"value": 50},
          "fill": {"scale": "color", "field": "region"},
          "strokeWidth": [
            {
              "test": "!length(data(\"highlight_store\")) || vlSelectionTest(\"highlight_store\", datum)",
              "value": 4
            },
            {"value": 2}
          ],
          "tooltip": {
            "signal": "{\"Region\": isValid(datum[\"region\"]) ? isArray(datum[\"region\"]) ? join(datum[\"region\"], '\\n') : datum[\"region\"] : \"\"+datum[\"region\"], \"Year\": timeFormat(datum[\"date\"], \"%Y\"), \"Renewable (%)\": format(datum[\"value\"], \".1f\")}"
          },
          "ariaRoleDescription": {"value": "point"},
          "description": {
            "signal": "\"date: \" + (timeFormat(datum[\"date\"], \"%Y\")) + \"; Renewable energy (% of total): \" + (format(datum[\"value\"], \"\")) + \"; region: \" + (isValid(datum[\"region\"]) ? isArray(datum[\"region\"]) ? join(datum[\"region\"], ' ') : datum[\"region\"] : \"\"+datum[\"region\"]) + \"; Region: \" + (isValid(datum[\"region\"]) ? isArray(datum[\"region\"]) ? join(datum[\"region\"], ' ') : datum[\"region\"] : \"\"+datum[\"region\"]) + \"; Year: \" + (timeFormat(datum[\"date\"], \"%Y\")) + \"; Renewable (%): \" + (format(datum[\"value\"], \".1f\"))"
          },
          "x": {"scale": "x", "field": "date"},
          "y": {"scale": "y", "field": "value"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": {
        "fields": [
          {"data": "source_0", "field": "date"},
          {"data": "data_0", "field": "date"}
        ]
      },
      "range": [0, {"signal": "width"}]
    },
    {
      "name": "y",
      "type": "linear",
      "domain": [0, 80],
      "range": [{"signal": "height"}, 0],
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "World",
        "European Union",
        "North America",
        "East Asia & Pacific",
        "Latin America & Caribbean",
        "Sub-Saharan Africa"
      ],
      "range": [
        "#1f2937",
        "#2563eb",
        "#dc2626",
        "#f59e0b",
        "#22c55e",
        "#8b5cf6"
      ]
    }
  ],
  "axes": [
    {
      "scale": "y",
      "orient": "left",
      "grid": true,
      "gridColor": "#e0e0e0",
      "gridScale": "x",
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "format": "%Y",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Renewable energy (% of total)",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ],
  "legends": [
    {
      "orient": "right",
      "title": "Region (click to filter)",
      "stroke": "color",
      "symbolType": "circle",
      "encode": {
        "labels": {
          "name": "region_legend_labels",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "(!length(data(\"highlight_store\")) || (highlight[\"region\"] && indexof(highlight[\"region\"], datum.value) >= 0))",
                "value": 1
              },
              {"value": 0.35}
            ],
            "cursor": {"value": "pointer"}
          }
        },
        "symbols": {
          "name": "region_legend_symbols",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "(!length(data(\"highlight_store\")) || (highlight[\"region\"] && indexof(highlight[\"region\"], datum.value) >= 0))",
                "value": 1
              },
              {"value": 0.35}
            ],
            "cursor": {"value": "pointer"}
          }
        },
        "entries": {
          "name": "region_legend_entries",
          "interactive": true,
          "update": {
            "fill": {"value": "transparent"},
            "cursor": {"value": "pointer"}
          }
        }
      },
      "fill": "color"
    }
  ],
  "config": {}
}