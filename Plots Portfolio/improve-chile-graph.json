{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "EL DESPEGUE DE CHILE",
    "subtitle": "PIB PER CAPITA 1810 - 2014 (a PPP en USD)",
    "fontSize": 26,
    "fontWeight": "bold",
    "color": "#ffffff",
    "subtitleFontSize": 14,
    "subtitleColor": "#d4a84b",
    "anchor": "middle",
    "offset": 10
  },
  "width": 680,
  "height": 400,
  "padding": {"left": 55, "right": 25, "top": 45, "bottom": 35},
  "data": {
    "url": "https://raw.githubusercontent.com/alonsoquezadar/alonsoquezadar.github.io/refs/heads/main/Plots%20Portfolio/Datasets/chile_despegue_data_replica.csv",
    "format": {"type": "csv"}
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "strokeWidth": 2.5,
        "color": "#ffffff",
        "interpolate": "monotone"
      },
      "encoding": {
        "x": {
          "field": "year",
          "type": "quantitative",
          "title": null,
          "scale": {"domain": [1810, 2014]},
          "axis": {
            "grid": false,
            "format": "d",
            "labelFontSize": 11,
            "labelColor": "#ffffff",
            "labelAngle": 0,
            "tickColor": "#ffffff",
            "domainColor": "#ffffff",
            "values": [1810, 1830, 1850, 1870, 1890, 1910, 1930, 1950, 1970, 1990, 2014]
          }
        },
        "y": {
          "field": "gdp_pc",
          "type": "quantitative",
          "title": null,
          "scale": {"domain": [800, 23000]},
          "axis": {
            "grid": true,
            "gridColor": "rgba(255,255,255,0.2)",
            "labelFontSize": 11,
            "labelColor": "#ffffff",
            "tickColor": "#ffffff",
            "domainColor": "#ffffff",
            "values": [800, 2500, 5000, 10000, 23000],
            "format": ",.0f"
          }
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "size": 100,
        "shape": "diamond",
        "fill": "#cc0000",
        "stroke": "#ff3333",
        "strokeWidth": 1
      },
      "data": {"values": [{"year": 1973, "gdp_pc": 6899}]},
      "encoding": {
        "x": {"field": "year", "type": "quantitative"},
        "y": {"field": "gdp_pc", "type": "quantitative"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "top",
        "dy": 20,
        "dx": -5,
        "fontSize": 15,
        "fontWeight": "bold",
        "color": "#ffdd00"
      },
      "data": {"values": [{"year": 1975, "gdp_pc": 6899, "label": "1975"}]},
      "encoding": {
        "x": {"field": "year", "type": "quantitative"},
        "y": {"field": "gdp_pc", "type": "quantitative"},
        "text": {"field": "label"}
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "background": "#0f2847"
  }
}
